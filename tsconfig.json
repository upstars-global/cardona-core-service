{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@themeConfig": [
        "./themeConfig"
      ],
      "@productConfig": [
        "./src/configs/productConfig"
      ],
      "@filterConfig": [
        "./src/@model/filterConfig"
      ],
      "@permissions": [
        "./src/configs/permissions"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "basePath": "./",
    "entryPoints": [
      "src/components/templates/BaseList/model.ts",
      "src/components/templates/BaseSection/model.ts",
      "src/components/FiltersBlock/filters.ts"
    ],
    "out": "public/docs",
    "media": "public/docs",
    "sourceLinkTemplate": "https://gitlab.upstr.to/backoffice/cardona-core-service/-/tree/master/{path}?at={gitRevision}#line={line}"
  }
}
